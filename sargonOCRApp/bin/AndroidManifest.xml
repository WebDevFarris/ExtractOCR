            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.example.sargonocrapp.ImageCaptureActv"
             android:screenOrientation="landscape"           
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity> 
        <activity
            android:name="com.example.sargonocrapp.DisplayImageActv"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.sargonocrapp.ImageCropActv"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
        </activity>       
        <activity
            android:screenOrientation="landscape"
            android:name="com.example.sargonocrapp.ImageOCRActv"
            android:label="@string/app_name"> 
        </activity>
         <activity
            android:name="com.sargon.labelreader.dbpush.AddItem"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sargon.labelreader.dbpush.DisplayDB"
            android:screenOrientation="landscape"
            android:label="@string/app_name" >
